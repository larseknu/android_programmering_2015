<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/StylishActionBar</item>
        <item name="android:actionMenuTextColor">@color/cornflowerblue</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- Own style for action bar -->
    <style name="StylishActionBar"
        parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@color/azure</item>
        <item name="android:backgroundStacked">@color/azure</item>
        <item name="android:backgroundSplit">@android:color/holo_blue_dark</item>
    </style>

    <!-- Action bar title text -->
    <style name="TitleTextStyle"
        parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/cornflowerblue</item>
    </style>

</resources>
